<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/recommendFragment">

    <fragment
        android:id="@+id/recommendFragment"
        android:name="com.example.ting.fragment.RecommendFragment"
        android:label="RecommendFragment">
        <action
            android:id="@+id/action_recommendFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.ting.fragment.DetailFragment"
        android:label="DetailFragment">
        <argument
            android:name="albumId"
            app:argType="integer" />
    </fragment>
</navigation>