<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Ting" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!--        TabLayout背景颜色-->
        <item name="colorPrimary">@color/main_color</item>
        <!--        ProgressBar颜色-->
        <item name="colorAccent">@color/main_color</item>
        <!--        状态栏背景-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!--        黑色状态栏-->
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <!--        导航栏背景-->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!--        黑色导航栏-->
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">?attr/isLightTheme</item>
    </style>

    <style name="Theme.Ting" parent="Theme.SplashScreen">
        <item name="postSplashScreenTheme">@style/Base.Theme.Ting</item>
        <item name="windowSplashScreenBackground">@color/main_color</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
    </style>
</resources>