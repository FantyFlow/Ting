<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Ximalaya" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Ximalaya.MyStyle" parent="Theme.SplashScreen">
        <item name="postSplashScreenTheme">@style/Theme.Ximalaya.MyStyle.Base</item>
        <item name="windowSplashScreenBackground">@color/main_color</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
    </style>

    <style name="Theme.Ximalaya.MyStyle.Base" parent="Theme.Material3.DayNight.NoActionBar">
        <!--        状态栏背景-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!--        黑色状态栏-->
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <!--        导航栏背景-->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!--        黑色导航栏-->
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">?attr/isLightTheme
        </item>
        <!--        TabLayout背景颜色-->
        <item name="colorPrimary">@color/main_color</item>
        <!--        ProgressBar颜色-->
        <item name="colorAccent">@color/main_color</item>
    </style>
</resources>